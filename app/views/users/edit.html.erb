<div class="back">
  <div class="back-rgba">
    <div class="container">

      <h1>ユーザー情報編集</h1>

      <%= form_for(@user) do |f| %>

        <p> 氏 </p>
          <%= f.text_field :lastname, placeholder:"氏"%><br>

        <p> 名 </p>
          <%= f.text_field :firstname, placeholder:"名"%><br>

        <p> 氏 カナ</p>
          <%= f.text_field :lastname_kana, placeholder:"氏　カナ"%><br>

        <p> 名 カナ</p>
          <%= f.text_field :firstname_kana, placeholder:"名　カナ"%><br>

        <p> 郵便番号</p>
          <%= f.text_field :postalcode, placeholder:"郵便番号"%><br>

        <p> 住所</p>
          <%= f.text_field :address, placeholder:"住所"%><br>

        <p> 電話番号</p>
          <%= f.text_field :phonenumber, placeholder:"電話番号"%><br>

        <p> メールアドレス </p>
          <%= f.text_field :email, placeholder:"メールアドレス"%><br>

        <br>
        <br>
      <%= f.submit "編集する" %>
    <% end %>

  <%= link_to "退会する" , user_resign_path, class: 'btn btn-default' %>

  <br>
<p> ----------------------------------</p>
  <br>

    <h2> 宛名を追加する </h2>
      <%= form_for(@address_name) do |f| %>

      <p> 宛名 </p>
        <%= f.text_field :address_name, placeholder:"宛名"%><br>

        <%= f.submit "追加する" %>

      <% end %>


        <h2> 送付先を追加する </h2>

          <%= form_for(@address) do |f| %>

          <p> 郵便番号 </p>
            <%= f.text_field :postalcode, placeholder:"郵便番号"%><br>

          <p> 住所 </p>
            <%= f.text_area :address, placeholder:"住所"%><br>

          <%= f.submit "追加する" %>

<% end %>