<h2>会員登録</h2><br />

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <p>ユーザー名</p>
  <div class="field">
    <%= f.label :lastname %><br />
    <%= f.text_field :lastname, autofocus: true, autocomplete:"(姓)" %>
  </div>

  <div class="field">
    <%= f.label :firstname %><br />
    <%= f.text_field :firstname, autofocus: true, autocomplete:"(名)" %>
  </div>

  <p>ユーザー名（カナ）</p>
  <div class="field">
    <%= f.label :lastname_kana %><br />
    <%= f.text_field :lastname_kana, autofocus: true, autocomplete:"(セイ)" %>
  </div>

  <div class="field">
    <%= f.label :firstname_kana %><br />
    <%= f.text_field :firstname_kana, autofocus: true, autocomplete:"(メイ)" %>
  </div>


  <div class="field">
    <%= f.label :postalcode %><br />
    <%= f.text_field :postalcode, autofocus: true, autocomplete:"郵便番号" %>
  </div>


  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, autocomplete:"住所" %>
  </div>


  <div class="field">
    <%= f.label :phonenumber %><br />
    <%= f.text_field :phonenumber, autofocus: true, autocomplete:"電話番号" %>
  </div>


   <div class="field">
     <%= f.label :email %><br />
     <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
   </div>

   <div class="field">
     <%= f.label :password %><br />
     <% if @minimum_password_length %>
     <em>(<%= @minimum_password_length %> 文字以上)</em>
     <% end %><br />
     <%= f.password_field :password, autocomplete: "new-password" %>
   </div>

  <div class="field">
     <%= f.label :password_confirmation %><br />
     <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
     <%= f.submit "会員登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
