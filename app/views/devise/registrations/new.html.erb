<h2>会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


<h4>ユーザー名</h4>
<table>
  <tr>
    <td><%= f.label :lastname %></td>
    <td><%= f.text_field :lastname, autofocus: true, autocomplete:"(姓)" %></td>
    <td><%= f.label :lastname_kana %></td>
    <td><%= f.text_field :lastname_kana, autofocus: true, autocomplete:"(セイ)" %></td>
  </tr>
  <tr>
    <td><%= f.label :firstname %></td>
    <td><%= f.text_field :firstname, autofocus: true, autocomplete:"(名)" %></td>
    <td><%= f.label :firstname_kana %></td>
    <td><%= f.text_field :firstname_kana, autofocus: true, autocomplete:"(メイ)" %></td>
  </tr>
</table>

<h4>お届け先情報</h4>
<table>
  <tr>
    <td><%= f.label :postalcode %></td>
    <td><%= f.text_field :postalcode, autofocus: true, autocomplete:"郵便番号" %></td>
  </tr>
  <tr>
    <td><%= f.label :address %></td>
    <td><%= f.text_field :address, autofocus: true, autocomplete:"住所", size:"50" %></td>
  </tr>
  <tr>
    <td><%= f.label :phonenumber %></td>
    <td><%= f.text_field :phonenumber, autofocus: true, autocomplete:"電話番号" %></td>
  </tr>
  <tr>
    <td><%= f.label :email %></td>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %></td>
  </tr>
</table>

<h4>パスワード</h4>

<div class="field">
  <%= f.label :password %>
   <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
   <% end %><br>
   <%= f.password_field :password, autocomplete: "new-password" %>
 </div>

<div class="field">
   <%= f.label :password_confirmation %><br>
   <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>

<div class="login-login">
   <%= f.submit "会員登録", class: "btn btn-primary" %>
</div>


<% end %>

<div class="login-login">
  <%= link_to "ログイン", new_session_path(resource_name), class: "btn btn-default" %>
</div>

<%= render "devise/shared/links" %>
