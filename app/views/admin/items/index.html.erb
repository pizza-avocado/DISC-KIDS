<div class="container">
　<% @items.each do |item| %>
  	<div class="row">
        <div class="col-xs-2"></div>
            <div class="col-xs-2">
              <%= link_to admin_item_path(item) do %>
                <%= attachment_image_tag item, :jacket_image, class: "image", fallback: "no_images.png", size: '200x200' %>
              <% end %>
            </div>
              <div class="col-xs-1"></div>
                <div class="col-xs-7">
  	              <table>
  			            <tr>
  			              <td><%= link_to admin_item_path(item) do %>
                        <strong><%= item.name %></strong>
                      <% end %></td>
  			              <td>Price. ¥<%= item.price %></td>
  			            </tr>
  			            <tr>
  	                  <td>Artist. <%= item.artist.artist %></td>
                      <td>Stock. <%= item.stock %></td>
                    </tr>
                    <tr>
                      <td>Label. <%= item.label.label %></td>
                      <td>Status. <%= item.status %></td>
                    </tr>
                    <tr>
                      <td>Genre. <%= item.genre.genre %></td>
                      <td></td>
                    </tr>
                  </table>
                </div>
    </div>
  　　<div class="border-bottom"></div>
  <% end %>
</div>

<%= paginate @items %>