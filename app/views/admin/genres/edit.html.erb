<div class = "container">
<h2> Editing Genre</h2>
  <%= form_for @genre, url:admin_genre_path do |f| %>
    <strong> Label</strong>
    <p><%= f.text_field :genre, class:"form-control" %></p>
    <%= f.hidden_field :id, :value => "params[:id]" %>
    <%= f.submit 'update genre', id:"back" %>
  <% end %>

<script>
	let back = document.getElementById("back")
	back.addEventListener("click", () => {
		window.history.back()
	})
</script>
</div>