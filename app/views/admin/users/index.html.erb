<h1>ユーザーリスト</h1>

<%= link_to "logout", destroy_admin_session_path, method: :delete %>


<p>検索</p>
  <%= form_tag(admin_search_path,:method => 'get') do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :lastname => nil %>
<% end %>

<ul><% @users.each do |user| %>
 <li>
    <%= link_to "マイページ", user_path(user), class:"user_#{user.id}" %>

    <%= user.lastname %><%= user.firstname %>

    <%= user.lastname_kana %><%= user.firstname_kana %>

    <%= user.phonenumber %>

    <%= user.email %>
 </li>
</ul>


<% end %>



