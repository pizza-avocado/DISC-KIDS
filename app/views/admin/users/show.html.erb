<div class="container">
  <div class="back-rgba">
    <div class="wrapper">

      <h1>会員詳細</h1>
         <p>名前： <%= @user.lastname %>  <%= @user.firstname %> </p>
         <p>名前(カナ)： <%= @user.lastname_kana %>  <%= @user.firstname_kana %></p>
         <p> 郵便番号 : <%= @user.postalcode %> </p>
         <p> 住所 : <%= @user.address %> </p>
         <p> email : <%= @user.email %> </p>
         <p> 電話番号 : <%= @user.phonenumber %> </p>

           <h2>宛名一覧</h2>
             <% @address_names.each do |address_name| %>
             <p>宛名： <%= address_name.address_name %> </p>
             <%= link_to "宛名編集", edit_admin_user_address_name_path(@user, address_name) %>
             <%= link_to "宛名削除", admin_user_address_name_path(@user, address_name), method: :delete %>
           <% end %>

         <h2>送付先一覧</h2>
            <% @addresses.each do |address| %>
              <p>郵便番号： <%= address.postalcode %> </p>
              <p>住所：<%= address.address %> </p>
              <%= link_to "送付先編集", edit_admin_user_address_path(@user, address) %>
              <%= link_to "送付先削除", admin_user_address_path(@user, address), method: :delete %>
            <% end %>

          <br>
        <br>
      <p> <%= link_to"プロフィール編集　宛名・送付先追加", edit_admin_user_path(@user), class: 'btn btn-primary' %> </p>
    <p> <%= link_to"購入履歴", admin_orders_path, class: 'btn btn-success' %> </p>

    </div>
  </div>
</div>