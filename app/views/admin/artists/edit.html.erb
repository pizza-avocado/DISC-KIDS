<div class = 'wrapper'>

<h2> アーティスト編集</h2>
  <%= form_for @artist, url:admin_artist_path(@artist)do |f| %>
    <strong> Artist</strong>
    <p><%= f.text_field :artist, class:"form-control" %></p>
    <%= f.hidden_field :item_id, :value => @item.id %>
    <%= f.submit 'update artist', id:"back" %>
    <%= link_to 'delite artist', admin_artist_path, method: :delete, data: {confirm: "関連する商品のデータも消去されます。よろしいですか？"} %>
  <% end %>

    </div>
  </div>
</div>

