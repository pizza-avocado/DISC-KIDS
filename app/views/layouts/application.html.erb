<!DOCTYPE html>
<html>
  <head>
    <title>DISCKids</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if admin_signed_in? %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="#">ユーザー一覧</a>
          </li>
          <li class="nav-item">
           <%= link_to "商品一覧",items_path %>
           </li>
          <li class="nav-item">
            <%= link_to "商品追加",new_admin_item_path %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">問い合わせ</a>
          </li>
          <li class="nav-item">
               <dl class="searchbox">
                  <%= form_tag search_items_path, :method => 'post' do %>
                  <%= text_field_tag :search, params[:search] %>
                  <%= submit_tag "Search", :name => nil %>
                  <% end %>
                </dl>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">ログアウト</a>
          </li>
        </ul>
    </nav>

  <% elsif user_signed_in? %>
    <nav>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="#">マイページ</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">問い合わせ</a>
           </li>
          <li class="nav-item">
            <a class="nav-link" href="#">検索枠</a>
              <dl class="searchbox">
                <%= form_tag items_path, :method => 'get' do %>
                  <%= text_field_tag :search, params[:search] %>
                  <%= submit_tag "Search", :name => nil %>
                  <% end %>
                </dl>


          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">カート</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">ログアウト</a>
          </li>
        </ul>
    </nav>




  <% else %>
    <nav>
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="#">ログイン</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">会員登録</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">問い合わせ</a>
        </li>
      </ul>
    </div>
    </nav>

  <% end %>

  <main>
    <%= yield %>
  </main>
  </body>
</html>
