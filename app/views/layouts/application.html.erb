<!DOCTYPE html>
<html>
  <head>
    <title>DISC_KIDS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <div class="social">
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" >
    </div>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav>
          <% if admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "USER LIST", admin_users_path %>
            </li>
            <li class="nav-item">
              <%= link_to "DISC INDEX",admin_items_path %>
            </li>
            <li class="nav-item">
              <%= link_to "ADD DISC",new_admin_item_path %>
            <li class="nav-item">
              <a class="nav-link" href="#"> INQUIRY</a>
            <li class="nav-item">
              <dl class="searchbox">
                 <%= form_tag search_items_path, :method => 'get' do %>
                   <%= text_field_tag :search, params[:search] %>
                   <%= submit_tag "Search", :name => nil %>
                 <% end %>
              </dl>
            </li>
            <li class="nav-item">
              <%= link_to "LOG OUT", destroy_admin_session_path, method: :delete %>
            </li>
        </nav>

          <% elsif user_signed_in? %>
            <nav>
              <li class="nav-item">
                <%= link_to "MY PAGE", user_path(current_user) %>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#"> INQUIRY</a>
              </li>
              <li class="nav-item">
                <dl class="searchbox">
                  <%= form_tag search_items_path, :method => 'get' do %>
                    <%= text_field_tag :search, params[:search] %>
                    <%= submit_tag "Search", :name => nil %>
                  <% end %>
                </dl>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#"> CART</a>
              </li>
              <li class="nav-item">
                <%= link_to "LOG OUT", destroy_user_session_path, method: :delete %>
              </li>
            </nav>

          <% else %>
            <nav>
              <li class="nav-item">
                <%= link_to "LOG IN", new_user_session_path %>
              </li>
              <li class="nav-item">
                <%= link_to "SIGN UP", new_user_registration_path %>
              </li>
              <li class="nav-item">
              </li>
              <li>
                <%= form_tag search_items_path, :method => 'get' do %>
                  <%= text_field_tag :search, params[:search] %>
                  <%= submit_tag "Search", :name => nil %>
                <% end %>
              </li>
            </nav>
          <% end %>
        </div>
    </header>

  <div class='body'>
    <div class='margin'></div>
  </div>

  <main>
    <%= yield %>
  </main>
    </body>
  </html>
