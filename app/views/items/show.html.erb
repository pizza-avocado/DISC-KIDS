<div class="back">
	<div class="back-rgba">
		<h1> 商品詳細ページ</h1>

			<div class = "container">
				<div class = "row">
			<div class = "col-lg-4"><%= attachment_image_tag @item, :jacket_image, class: "image", fallback: "no_images.png", size: '200x200' %>
				<div class = "link"><%= link_to "カートに追加する", carts_path, params: { item_id: @item.id }, class: "btn btn-primary btn-lg" %></div>
			</div>

			<p>商品名: <%= @item.name %> </p>
			<p>アーティスト名: <%= @item.artist.artist %></p>
			<p>ジャンル名: <%= @item.genre.genre %></p>
			<p>レーベル名: <%= @item.label.label %></p>
			<p>価格: <%= @item.price %></p>
			<p>在庫数: <%= @item.stock %></p>
			<p>販売ステータス: <%= @item.status %></p>


			<table class = "table">
			<% @item.discs.each do |disc| %>
			<tr>
				<td>ディスク<%= disc.disc_number %> </td>
			</tr>

			<tr>
				<% disc.tracks.each do |track| %>
				<td>トラック<%= track.track_number %> </td>
				<td><%= track.track_name %> </td>
			</tr>
				<% end %>
			<% end %>
			</table>



			<% if user_signed_in? %>
				<% if @item.liked_by?(current_user) %>
				<li>
			    	<i class="fa fa-calendar"></i><%= @item.created_at.strftime('%Y/%m/%d') %>
				</li>
				<li>
					<%= link_to item_likes_path(@item), method: :delete do %>
					<i class = "fa fa-heart" aria-hidden = "true" style = "color:red;"></i>
					<%= @item.likes.count %> いいね
					<% end %>
				</li>
				<% else %>
				<li>
					<%= link_to item_likes_path(@item), method: :post do %>
					<i class = "fa fa-heart-o" aria-hidden = "true"></i>
					<%= @item.likes.count %> いいね
				</li>
				<% end %>
				<% end %>
			<% end %>
			</div>
		</div>
	</div>
</div>


