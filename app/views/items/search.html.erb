<div class="container">
  <div class="back-rgba">
      <% result = 0 %>
      <% @items.each do |item| %>
        <% result += 1 %>
      <% end %>
        <h5><%= params[:search] %>：の検索結果</h5>
        <h5><%= result %>件のCDが見つかりました</h5>
　        <% @items.each do |item| %>
              <div class="col-xs-1"></div>
                <div class="col-xs-3">

                  <%= link_to admin_item_path(item) do %>
                    <%= attachment_image_tag item, :jacket_image, class: "jacket-image", fallback: "no_images.png", size: '200x200' %>
                  <% end %>
                </div>
                    <div class="col-xs-8">
                      <table class="index-table">
                        <tr>
                          <td class="index-td"><%= link_to admin_item_path(item) do %>
                            <strong><%= item.name %></strong>
                          <% end %></td>
                          <td class="index-td">Price. ¥<%= item.price %></td>
                        </tr>
                        <tr>
                          <td class="index-td">Artist. <%= item.artist.artist %></td>
                          <td class="index-td">Stock. <%= item.stock %></td>
                        </tr>
                        <tr>
                          <td class="index-td">Label. <%= item.label.label %></td>
                          <td class="index-td">Status. <%= item.status %></td>
                        </tr>
                        <tr>
                          <td class="index-td">Genre. <%= item.genre.genre %></td>
                          <td class="index-td"></td>
                        </tr>
                      </table>
                    </div>
            </div>
          <% end %>
  </div>
</div>
